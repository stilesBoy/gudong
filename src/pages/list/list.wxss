@import "../share/bookItem/bookItem.wxss";  
@import "../share/selectItem/selectItem.wxss";  
/**app.wxss**/
.scrollContainer{
   display: flex; 
   flex-direction: column;
   flex-wrap:wrap;
   padding:2px 10px;
}

.foot{
  display: flex;flex-direction: row;align-items: center;align-self: center;justify-content: center;
}
.loading{  
  padding: 10rpx;  
  text-align: center;  
}  
.loading:before{  
  display: inline-block;  
  margin-right: 5rpx;  
  vertical-align: middle;  
  content: '';  
  width: 40rpx;  
  height: 40rpx;  
  background: url(../../img/008.gif) no-repeat;  
}  
.loading.complete:before{  
  display: none;  
} 