.bookItem {
   display: flex; 
   flex-direction: row;
   justify-content:flex-start;  
   width:100%;
   height: 230rpx;
   margin-top:5rpx;
} 
.bookIcon
{
  width: 170rpx;
  height: 190rpx; 
  margin: 10rpx;
}
.bookDesc{
   display: flex; 
   flex-direction: column;
   justify-content: flex-start;
   height: 190rpx;
   width:99%;
   margin:2rpx;
}
.bookItem text{
  font-size: 12px;
  margin-top:15rpx;
  height:14px;
  line-height: 14px;
}
.bookDesc .brief{
  overflow-y: hidden;
  height:28px;
  line-height: 14px;
}
.bookItem-line {
    width:100%;
    height: 1px;
    background: #E7E7E7;
}